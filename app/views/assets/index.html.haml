- title "Assets"

%table
  %tr
    %th Uploaded Files
  - for asset in @assets
    %tr
      %td= link_to asset.file_name, download_url(asset)
      %td= link_to 'Delete File', asset, :confirm => 'Are you sure you want to delete this file?', :method => :delete

%p= link_to "New Asset", new_asset_path
